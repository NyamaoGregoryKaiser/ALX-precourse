// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  role           Role      @default(MEMBER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  managedProjects Project[] @relation("ManagerProjects") // Projects where this user is the manager
  memberProjects  Project[] @relation("ProjectMembers")  // Projects where this user is a member
  createdProjects Project[] @relation("ProjectCreator")  // Projects created by this user
  assignedTasks   Task[]    @relation("AssignedTo")    // Tasks assigned to this user
  createdTasks    Task[]    @relation("TaskCreator")    // Tasks created by this user
  comments        Comment[] @relation("CommentAuthor")  // Comments made by this user

  @@map("users")
}

enum Role {
  MEMBER
  MANAGER
  ADMIN
}

// Project Model
model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  managerId   String    @map("manager_id")
  manager     User      @relation("ManagerProjects", fields: [managerId], references: [id])

  members     User[]    @relation("ProjectMembers") // Users who are members of this project

  createdBy   User      @relation("ProjectCreator", fields: [createdById], references: [id])
  createdById String    @map("created_by_id")

  tasks       Task[]

  @@unique([name, managerId]) // A manager cannot have two projects with the same name
  @@map("projects")
}

enum ProjectStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

// Task Model
model Task {
  id           String     @id @default(uuid())
  title        String
  description  String?
  status       TaskStatus @default(PENDING)
  priority     Priority   @default(MEDIUM)
  dueDate      DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  projectId    String     @map("project_id")
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assignedToId String     @map("assigned_to_id")
  assignedTo   User       @relation("AssignedTo", fields: [assignedToId], references: [id])

  createdById  String     @map("created_by_id")
  createdBy    User       @relation("TaskCreator", fields: [createdById], references: [id])

  comments     Comment[]

  @@map("tasks")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Comment Model
model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  taskId    String   @map("task_id")
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  authorId  String   @map("author_id")
  author    User     @relation("CommentAuthor", fields: [authorId], references: [id])

  @@map("comments")
}
