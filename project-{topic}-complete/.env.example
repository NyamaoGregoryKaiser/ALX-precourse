# Node.js Environment
NODE_ENV=development # development, test, production
PORT=3000
LOG_LEVEL=info # error, warn, info, http, verbose, debug, silly

# Database Configuration (PostgreSQL)
DB_TYPE=postgres
DB_HOST=localhost # or postgres-db if running in docker-compose
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=mobile_backend_db

# JWT Configuration
JWT_SECRET=supersecretjwtkeythatshouldbemorecomplexandrandom
JWT_EXPIRES_IN=1h # e.g., '15m', '1h', '7d'

# Redis Configuration
REDIS_URL=redis://localhost:6379 # or redis-cache if running in docker-compose
CACHE_TTL_SECONDS=3600 # Default cache time-to-live for products (1 hour)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100 # Max 100 requests per IP per window

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000